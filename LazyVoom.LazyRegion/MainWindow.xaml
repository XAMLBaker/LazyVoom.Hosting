<Window
    x:Class="LazyVoom.LazyRegion.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LazyVoom.LazyRegion"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:voom="http://lazyVoom.dev/voom"
    xmlns:wpf="clr-namespace:LazyRegion.WPF;assembly=LazyRegion.WPF"
    Title="MainWindow"
    Width="800"
    Height="450"
    voom:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Button Command="{Binding MoveCommand}" CommandParameter="a" />
            <Button Command="{Binding MoveCommand}" CommandParameter="b" />
        </StackPanel>
        <wpf:LazyRegion RegionName="Root" TransitionAnimation="Fade" />
    </Grid>
</Window>
