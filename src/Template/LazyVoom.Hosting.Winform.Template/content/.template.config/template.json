{
  "$schema": "http://json.schemastore.org/template",
  "author": "LukeWire",
  "description": "LazyVoom.Hosting Winform Application Project",
  "classifications": [ "Common", "Winform", "LazyVoom" ],
  "identity": "lazyvoomhosting-winform",
  "name": "Windows Forms App (LazyVoomHosting App)",
  "shortName": "winform-lazyvoom-hosting",
  "sourceName": "LazyVoomHosting.Winform.App",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "icon": "icon.png",
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net6.0-windows",
          "description": "Target net6.0-windows",
          "displayName": ".NET 6.0"
        },
        {
          "choice": "net7.0-windows",
          "description": "Target net7.0-windows",
          "displayName": ".NET 7.0"
        },
        {
          "choice": "net8.0-windows",
          "description": "Target net8.0-windows",
          "displayName": ".NET 8.0"
        },
        {
          "choice": "net9.0-windows",
          "description": "Target net9.0-windows",
          "displayName": ".NET 9.0"
        }
      ],
      "replaces": "net8.0-windows",
      "defaultValue": "net8.0-windows"
    }
  },
  "postActions": [
    {
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EEB88E", // NuGet restore ActionId
      "description": "Restore NuGet packages",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore' to fetch dependencies."
        }
      ],
      "continueOnError": true
    }
  ]
}